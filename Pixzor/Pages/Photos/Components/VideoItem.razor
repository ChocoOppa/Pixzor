<style>
    .item-hidden {
        visibility: hidden;
        opacity: 0;
        transition: visibility 0.5s, opacity 0.5s linear;
    }

    .relative:hover .item-hidden {
        visibility: visible;
        opacity: 1;
    }

    img {
        transition: filter 0.5s linear;
    }

        img:hover {
            filter: brightness(.7);
        }
</style>

<MudContainer Class="item-container d-flex" Style="height: fit-content">
    <MudLink Href="@($"/video/{Video?.Id}")" Style="width: 100%;">
        <MudContainer Class="relative">

            <MudImage Src="@(Video!.Image)"
                      Fluid="true"
                      ObjectFit="ObjectFit.Contain"
                      Style="width: 100%; height: auto;" />

            <MudCardHeader Class="item-hidden absolute pa-2" Style="width: 100%; top: 0;">
                <CardHeaderAvatar>
                    <MudAvatar Style="@($"background-color: {String.Format("#{0:X6}", new Random((int)DateTime.Now.Ticks).Next(0x1000000))};")">@Video.User!.Name[0]</MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1" Style="color: white;">@Video.User!.Name</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Surface" />
                </CardHeaderActions>
            </MudCardHeader>

            @*<MudCardContent Class="item-hidden absolute" Style="width: 70%; bottom: 0;">
                <MudText Typo="Typo.body2" Style="color: white;">@Photo?.Alt</MudText>
            </MudCardContent>*@

            <MudCardActions Class="item-hidden absolute" Style="bottom: 0; right: 0;">
                <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Surface" />
                <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Surface" />
            </MudCardActions>

        </MudContainer>
    </MudLink>
</MudContainer>


@code {
    [Parameter]
    public Video? Video { get; set; }
}
