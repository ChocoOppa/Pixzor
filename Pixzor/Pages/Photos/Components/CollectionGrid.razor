@if (collectionPage?.TotalResults > 0)
{
    <MudGrid Class="d-flex flex-nowrap gap-4">

        <!-- Hidden at sm and down -->
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudItem Class="pa-0" md="4">
                <MudStack Spacing="4">
                    @*<Virtualize ItemsProvider="GetCuratedPhotos" Context="photo">*@
                    @foreach (var collection in collectionPage.Collections!.Take(collectionPage.PerPage / 3))
                    {
                        <CollectionItem Collection="@collection" />
                    }
                    @*</Virtualize>*@
                </MudStack>
            </MudItem>
            <MudItem Class="pa-0" md="4">
                <MudStack Spacing="4">
                    @foreach (var collection in collectionPage.Collections!.Skip(collectionPage.PerPage / 3)
                    .Take((collectionPage.PerPage - collectionPage.PerPage / 3) / 2))
                    {
                        <CollectionItem Collection="@collection" />
                    }
                </MudStack>
            </MudItem>
            <MudItem Class="pa-0" md="4">
                <MudStack Spacing="4">
                    @foreach (var collection in collectionPage.Collections!
                    .TakeLast((collectionPage.PerPage - collectionPage.PerPage / 3) / 2))
                    {
                        <CollectionItem Collection="@collection" />
                    }
                </MudStack>
            </MudItem>
        </MudHidden>

        <!-- Hidden at md and up -->
        <MudHidden Breakpoint="Breakpoint.Sm" Invert="true">
            <MudItem Class="pa-0" sm="6">
                <MudStack Spacing="4">
                    @*<Virtualize ItemsProvider="GetCuratedPhotos" Context="photo">*@
                    @foreach (var collection in collectionPage.Collections!.Take(collectionPage.PerPage / 2))
                    {
                        <CollectionItem Collection="@collection" />
                    }
                    @*</Virtualize>*@
                </MudStack>
            </MudItem>
            <MudItem Class="pa-0" sm="6">
                <MudStack Spacing="4">
                    @foreach (var collection in collectionPage.Collections!.Skip(collectionPage.PerPage / 2))
                    {
                        <CollectionItem Collection="@collection" />
                    }
                </MudStack>
            </MudItem>
        </MudHidden>

        <!-- Hidden at sm and up -->
        <MudHidden Breakpoint="Breakpoint.SmAndUp">
            <MudItem Class="pa-0" xs="12">
                <MudStack Spacing="4">
                    @*<Virtualize ItemsProvider="GetCuratedPhotos" Context="photo">*@
                    @foreach (var collection in collectionPage.Collections!)
                    {
                        <CollectionItem Collection="@collection" />
                    }
                    @*</Virtualize>*@
                </MudStack>
            </MudItem>
        </MudHidden>

    </MudGrid>
}

@code {
    [Parameter]
    public CollectionPage? collectionPage { get; set; }
    [Parameter]
    public string searchText { get; set; } = string.Empty;
}
