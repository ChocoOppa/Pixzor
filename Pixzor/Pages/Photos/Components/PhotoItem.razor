    <MudLink Href="@($"/photo/{Photo.Id}")" Style="width: 100%;">
    <MudCard Class="relative" Elevation="0">
        <MudCardHeader Class="item-hidden absolute pa-2" Style="width: 100%;">
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Primary">@Photo.Photographer[0]</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1" Style="color: white">@Photo.Photographer</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Surface" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudImage Src="@(Photo.Src.Large)"
                  Alt="@(Photo.Alt)"
                  Fluid="true"
                  ObjectFit="ObjectFit.Contain"
                  Style="width: 100%; height: auto;" />
        <MudCardContent Class="item-hidden absolute" Style="width: 70%; bottom: 0;">
            <MudText Typo="Typo.body2" Style="color: white">@Photo.Alt</MudText>
        </MudCardContent>
        <MudCardActions Class="item-hidden absolute" Style="bottom: 0; right: 0;">
            <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Surface" />
            <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Surface" />
        </MudCardActions>
    </MudCard>
    </MudLink>
</MudContainer>


@code {
    [Parameter]
    public Photo Photo { get; set; }
}
